                 android:textColor="#000000"
                 android:textSize="18dp"
                 android:textStyle="bold" />

             <EditText
                 android:id="@+id/edt_weightrejectpurgingextrudertext"
                 android:layout_width="280dp"
                 android:layout_height="40dp"
                 android:layout_below="@+id/txt_resultofproduction5"
                 android:layout_marginLeft="70dp"
                 android:layout_marginTop="8dp"
                 android:layout_marginBottom="4dp"
                 android:hint="                      Val"
                 android:textSize="17dp" />

            <TextView
                android:id="@+id/txt_resultofproduction6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/edt_weightrejectpurgingextrudertext"
                android:background="@drawable/backgroundnavbar"
                android:padding="4dp"
                android:text=""
