            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/ppheader"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                        android:src="@drawable/productionresultbar"/>
            <TextView
                android:layout_below="@+id/ppheader"
                android:id="@+id/txt_operatornamed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:padding="4dp"
                android:text="  Operator "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:layout_below="@+id/ppheader"
                android:id="@+id/edt_operatorname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="133dp"
                android:layout_marginBottom="4dp"
                android:hint="0perator"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txt_viewshift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_operatorname"
                android:background="@drawable/background"
                android:padding="4dp"
                android:text="  Shift "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spn_shift"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_operatornamed"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="4dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_resultofproduction"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/spn_shift"
                android:background="@drawable/backgroundnavbar"
                android:padding="4dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spn_prodresult"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_viewshift"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_qtytotalcap"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spn_prodresult"
                android:background="@drawable/background"
                android:padding="4dp"
                android:text="  Qty                    Pcs"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

             <EditText
                 android:id="@+id/edt_qtytotalcaptext"
                 android:layout_width="70dp"
                 android:layout_height="40dp"
                 android:layout_below="@+id/txt_resultofproduction"
                 android:layout_marginLeft="55dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="4dp"
                 android:hint="   Val"
                 android:textSize="17dp" />

             <TextView
                 android:id="@+id/txt_weighttotalcap"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/spn_prodresult"
                 android:layout_marginLeft="180dp"
                 android:background="@drawable/background"
                 android:padding="4dp"
                 android:text="  Weight                kg"
                 android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                 android:textColor="#000000"
                 android:textSize="18dp"
                 android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_weighttotalcaptext"
