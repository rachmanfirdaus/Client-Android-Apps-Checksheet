<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".ui.rejectimdform.RejectIMDForm">

        <ScrollView
            android:id="@+id/contenform"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/ppheader"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:src="@drawable/imdrejectheader" />

                        <TextView
                            android:layout_below="@+id/ppheader"
                            android:id="@+id/txt_operatornamed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background"
                            android:padding="4dp"
                            android:text="  Operator "
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_below="@+id/ppheader"
                            android:id="@+id/edt_operatorname"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="133dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="4dp"
                            android:hint="0perator"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txt_viewshift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_operatorname"
                            android:background="@drawable/background"
                            android:padding="4dp"
                            android:text="  Shift "
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spn_shift"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/txt_operatornamed"
                            android:layout_marginLeft="130dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="4dp"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/txt_viewflash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spn_shift"
                            android:background="@drawable/background"
                            android:padding="4dp"
                            android:text="  Flash                                                      Pcs "
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_flash"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/txt_viewshift"
                            android:layout_marginLeft="133dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="4dp"
                            android:hint="Flash"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txt_viewovality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_flash"
                            android:background="@drawable/background"
                            android:padding="4dp"
                            android:text="  Ovality                                                   Pcs "
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_ovality"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/txt_viewflash"
                            android:layout_marginLeft="133dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginBottom="4dp"
                            android:hint="Ovality"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txt_viewwarna"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_ovality"
                            android:background="@drawable/background"
                            android:padding="4dp"
                            android:text="  Color                                                      Pcs "
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_warna"
                            android:layout_below="@+id/txt_viewovality"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="133dp"
                            android:layout_marginBottom="4dp"
                            android:hint="Color"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txt_viewbintik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_warna"
                            android:background="@drawable/background"
                            android:padding="4dp"
                            android:text="  Freckless                                              Pcs "
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_bintik"
                            android:layout_below="@+id/txt_viewwarna"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="133dp"
                            android:layout_marginTop="8dp"
                            android:hint="Bintik"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txt_viewshort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_bintik"
                            android:background="@drawable/background"
                            android:padding="4dp"
                            android:text="  Short                                                      Pcs "
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_shorts"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/txt_viewbintik"
                            android:layout_marginLeft="133dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:hint="Short"
                            android:textSize="17dp" />

                        <Button
                            android:id="@+id/btn_submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_shorts"
                            android:backgroundTint="#00BCD4"
                            android:text="SUBMIT"
                            android:textSize="8pt"
                            android:textStyle="bold" />
                </RelativeLayout>
        </ScrollView>


</RelativeLayout>